<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/all_doctor_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/placeImageView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/button_select_location"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"
            android:background="@drawable/circle_shape_gray"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/placeNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:text="Lorem Ipsumiop"
                android:textColor="@color/black_231f20"
                android:textSize="15sp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/urlLinkTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:text="url"
                android:textColor="@color/grey_a3a3a3"
                android:textSize="12sp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!--<com.assignment.myplace.customviews.CenterRadioButton
            android:id="@+id/favoriteRadio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:button="@drawable/radio_button_state"/>-->

        <com.assignment.myplace.customviews.CenterCheckBox
            android:id="@+id/favoriteRadio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:checked="true"
            android:button="@drawable/radio_button_state"/>

    </LinearLayout>
</LinearLayout>